<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>MMORPG - Game of Thrones</title>
    <script src="js/jquery.js"></script>
    <link rel="stylesheet" href="libs/bootstrap/index.css" />
    <link href="css/register.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-light mb-4">
      <div class="container">
        <a href="/" class="btn btn-success">Voltar</a>
      </div>
    </nav>

    <div class="container">
      <% if(errors.length){ %>
      <div class="alert alert-danger">
        <strong>ATENÇÃO!</strong>
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
      <% } %>
      <form action="/cadastrar" method="POST">
        <div class="form-row">
          <div class="form-group col-sm-4">
            <label for="name" class="col-sm-2">Nome</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Informe seu nome"
              value="<% dados.name %>"
              required
            />
          </div>
          <div class="form-group col-sm-4">
            <label for="username" class="col-sm-2">Usuário</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              placeholder="Informe seu usuário"
              value="<% dados.username %>"
              required
            />
          </div>
          <div class="form-group col-sm-4">
            <label for="password" class="col-sm-2">Senha</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Informe sua senha"
              value="<% dados.password %>"
              required
            />
          </div>
        </div>
        <div class="form-row mb-4">
          <div class="col-sm-2">
            <label for="arryn" class="form-check-label">
              <img src="images/casa_arryn.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="arryn"
                  value="arryn"
                  checked
                />
                Casa Arryn
              </div>
            </label>
          </div>

          <div class="col-sm-2">
            <label for="baratheon" class="form-check-label">
              <img src="images/casa_baratheon.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="baratheon"
                  value="baratheon"
                />
                Casa Baratheon
              </div>
            </label>
          </div>

          <div class="col-sm-2">
            <label for="greyjoy" class="form-check-label">
              <img src="images/casa_greyjoy.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="greyjoy"
                  value="greyjoy"
                />
                Casa Greyjoy
              </div>
            </label>
          </div>

          <div class="col-sm-2">
            <label for="lannister" class="form-check-label">
              <img src="images/casa_lannister.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="lannister"
                  value="lannister"
                />
                Casa Lannister
              </div>
            </label>
          </div>

          <div class="col-sm-2">
            <label for="martell" class="form-check-label">
              <img src="images/casa_martell.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="martell"
                  value="martell"
                />
                Casa Martell
              </div>
            </label>
          </div>

          <div class="col-sm-2">
            <label for="stark" class="form-check-label">
              <img src="images/casa_stark.jpg" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="stark"
                  value="stark"
                />
                Casa Stark
              </div>
            </label>
          </div>
        </div>

        <div class="form-row d-flex justify-content-center mb-5">
          <div class="col-sm-2">
            <label for="targaryen" class="form-check-label">
              <img src="images/casa_targaryen.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="targaryen"
                  value="targaryen"
                />
                Casa Targaryen
              </div>
            </label>
          </div>
          <div class="col-sm-2">
            <label for="tully" class="form-check-label">
              <img src="images/casa_tully.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="tully"
                  value="tully"
                />
                Casa Tully
              </div>
            </label>
          </div>
          <div class="col-sm-2">
            <label for="tyrell" class="form-check-label">
              <img src="images/casa_tyrell.jpg" class="d-block" />
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  name="house"
                  id="tyrell"
                  value="tyrell"
                />
                Casa Tyrell
              </div>
            </label>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center">
          <button type="submit" class="btn btn-success col-4 mx-auto">
            Confirmar cadastro
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
